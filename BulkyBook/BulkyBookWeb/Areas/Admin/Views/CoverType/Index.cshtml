@model IEnumerable<CoverType>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">CoverType List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Create New CoverType
			</a>
		</div>
	</div>
	<br /><br />

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th>
					CoverType Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var coverType in Model)
			{
				<tr>
					<td width="80%">
						@coverType.Name
					</td>
					<td> 
						<div class="w-100 btn-group" role="group">
							<a asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id" class="btn btn-primary mx-2 rounded w-100"><i class="bi bi-pencil-square"></i> Edit</a>
							<a asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id" class="btn btn-danger mx-2 rounded w-100"><i class="bi bi-file-earmark-x"></i> Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

